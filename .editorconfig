root = true

[*]
; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset                  = utf-8
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = space
indent_size              = 4

[*.php]
indent_style = space
indent_size  = 4

[*.html]
indent_style = space
indent_size  = 2

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size  = 2

[*.{css,scss}]
indent_style = space
indent_size  = 2

[*.htaccess]
indent_style = space
indent_size  = 4

[*.sh]
indent_style = space
indent_size  = 4

[*.sql]
indent_style = space
indent_size  = 4

[*.swift]
indent_style = space
indent_size  = 4

[*.go]
indent_style = tab
indent_size  = 4

[*.[ch]]
indent_style = space
indent_size  = 4

[CMakeLists.txt]
indent_style = space
indent_size  = 4

[*.ctp]
indent_style = space
indent_size  = 2

[*.py]
indent_style = space
indent_size  = 4

[Makefile]
indent_style = tab
indent_size  = 4

[*.bat]
end_of_line = crlf

[*.{json,yml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size  = 4
max_line_length = off
trim_trailing_whitespace = false
